<% include header.ejs %>
<!-- Page Produit -->
<div id="wrapper">


    <!-- /#sidebar-wrapper -->
    <% include side_bar.ejs %>

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <form action="/addProductSite" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Nom</label>
                                <input type="text" placeholder="Nom" class="form-control" name="nom">
                            </div>
                            <div class="form-group">
                                <label>Prix</label>
                                <input type="text" placeholder="Prix" class="form-control" name="prix">
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <input type="text" placeholder="Description" class="form-control" name="description">
                            </div>
                            <div class="form-group">
                                <label>Sous-categorie</label>
                                <select class="form-control" name="sousCategorie">
                                    <% for(var i=0; i<sousCategories.length; i++) {%>
                                    <option value="<%= sousCategories[i]._id %>"><%= sousCategories[i].sousCategorie %></option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Images :</label>
                                <input type="file" multiple name="image" onchange="previewFile()">
                                <p class="help-block">Inserez une image.</p>
                            </div>
                            <img src="" height="200" alt="Image preview...">
                            <button class="btn btn-default" type="submit">Add</button>
                        </form>
                    </div>
                </div>
                <table class="table products">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Description</th>
                            <th>Sous Categorie</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i=0; i<products.length; i++) {%>
                        <tr>
                            <td><%= products[i]._id %></td>
                            <td><%= products[i].nom %></td>
                            <td><%= products[i].prix %></td>
                            <td><%= products[i].description %></td>
                            <td>
                                <% for(var j=0; j<sousCategories.length; j++) {
                                    if (products[i].sousCategorie == sousCategories[j]._id) { %>
                                <%= sousCategories[j].sousCategorie %>
                                <% }
                                } %>
                            </td>
                            <td>
                                <% if (typeof products[i].image.length !== 'undefined') {
                                    for(var j=0; j<products[i].image.length; j++) { %>
                                <img src="/images/<%= products[i].image[j].filename %>" alt="<%= products[i].image[j].filename %>"style="width:128px;height:128px;">
                                <% }
                                } else { %>
                                <img src="/images/<%= products[i].image %>" alt="<%= products[i].image %>"style="width:128px;height:128px;">
                                <%
                                } %>
                            </td>
                            <td>
                                <form action="/modifySetProductSite" method="POST">
                                    <input type="hidden" name="id" value="<%= products[i]._id %>">
                                    <button type="submit" class="btn btn-warning">Modifier</button>
                                </form>
                                <form action="/deleteProductSite" method="POST">
                                    <input type="hidden" name="id" value="<%= products[i]._id %>">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>

<!-- Menu Toggle Script -->
<script>
    $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
    });

    function previewFile(){
        var preview = document.querySelector('img'); //selects the query named img
        var file    = document.querySelector('input[type=file]').files[0]; //sames as here
        var reader  = new FileReader();

        reader.onloadend = function () {
            preview.src = reader.result;
        }

        if (file) {
            reader.readAsDataURL(file); //reads the data as a URL
        } else {
            preview.src = "";
        }
    }

    previewFile();
</script>

</body>

</html>
