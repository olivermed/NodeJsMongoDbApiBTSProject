<% include header.ejs %>

<div id="wrapper">

        <!-- Sidebar -->
      <% include side_bar.ejs %>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                  <table class="table categories">
                    <thead>
                      <tr>
                        <th>Id</th>
                        <th>Categories</th>
                        <th>Image</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for(var i=0; i<categories.length; i++) {%>
                      <tr>
                        <td><%= categories[i]._id %></td>
                        <td><%= categories[i].categorie %></td>
                        <td><%= categories[i].image %></td>
                        <td>
                          <form action="/ModifyCategorieSetSite" method="POST">
                            <input type="hidden" name="id" value="<%= categories[i]._id %>">
                            <button type="submit" class="btn btn-warning">Modifier</button>
                          </form>
                          <form action="/deleteCategorieSite" method="POST">
                            <input type="hidden" name="id" value="<%= categories[i]._id %>">
                            <button type="submit" class="btn btn-danger">Delete</button>  
                          </form>
                        </td>
                      </tr>
                    <% } %>
                    </tbody>
                  </table>
                  <form class="form-inline" action="/addCategorieSite" method="POST">
                    <input type="text" placeholder="Category" name="categorie">
                    <input type="text" placeholder="image" name="image">
                    <button type="submit">Add</button>
                  </form>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
</body>
</html>