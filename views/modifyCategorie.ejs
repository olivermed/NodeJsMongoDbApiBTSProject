<% include header.ejs %>

<div id="wrapper">
    <!-- Sidebar -->
    <% include side_bar.ejs %>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h1>Nom du produit : <%= categorie[0].categorie %></h1>
                        <form action="/ModifyCategorieSite" method="POST" enctype="multipart/form-data">
                            <input type="hidden" value="<%= categorie[0]._id %>" name="id">
                            <div class="form-group">
                                <label>Categories</label>
                                <input type="text" value="<%= categorie[0].categorie %>" placeholder="categorie" name="categorie">
                            </div>
                            <div class="form-group">
                                <input class="btn" type="file" name="image">
                            </div>
                            <button class="btn btn-default" type="submit">Modifier</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>


</body>
</html>
