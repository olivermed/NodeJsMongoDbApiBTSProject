<% include header.ejs %>

<div id="wrapper">
    <!-- Sidebar -->
    <% include side_bar.ejs %>
    <!-- /#sidebar-wrapper -->

    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <h1>Nom du produit : <%= sousCategories[0].sousCategorie %></h1>
                        <form action="/ModifySousCategorieSite" method="POST" enctype="multipart/form-data">
                            <input type="hidden" value="<%= sousCategories[0]._id %>" name="id">
                            <div class="form-group">
                                <label>Sous-Categories</label>
                                <input type="text" class="form-control" value="<%= sousCategories[0].sousCategorie %>" placeholder="sousCategorie" name="sousCategorie">
                            </div>
                            <div class="form-group">
                                 <label>Categorie</label>
                                <select class="form-control" name="categorie">
                                    <% for(var i=0; i<categories.length; i++) {%>
                                    <option <% if (categories[i]._id == sousCategories[0].categorie) { %> selected <% } %>
                                            value="<%= categories[i]._id %>"><%= categories[i].categorie %></option>
                                    <% } %>
                                </select>
                            </div>
                            <input type="file" name="image">
                            <button class="btn btn-default" type="submit">Modifier</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /#page-content-wrapper -->
</div>
</body>
</html>
